{
  "$id": "News",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "ApiId#"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "description_preview": {
      "type": "string"
    },
    "img_url": {
      "type": ["string", "null"],
      "format": "uri"
    },
    "img_alt": {
      "type": ["string", "null"]
    },
    "published_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
