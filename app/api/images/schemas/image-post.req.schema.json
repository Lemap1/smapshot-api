{
  "$id": "ImagePostRequest",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "iiif_data": {
      "type": "object",
      "properties": {
        "image_service3_url": {
          "type": "string"
        },
        "regionByPx": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              },
              "minItems": 4,
              "maxItems": 4,
              "example": [794,586,2379,1511]
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "image_service3_url"
      ]
    },
    "framing_mode": {
      "type": "string",
      "enum": [
        "single_image",
        "composite_image"
      ],
      "default": "single_image"
    },
    "tilt_shift": {
      "type": "boolean"
    },
    "is_published": {
      "type": "boolean"
    },
    "original_id": {
      "type": "string",
      "maxLength": 50
    },
    "title": {
      "type": "string"
    },
    "caption": {
      "type": [ "string", "null" ]
    },
    "collection_id": {
      "type": "number"
    },
    "license": {
      "type": "string"
    },
    "download_link": {
      "type": [ "string", "null" ]
    },
    "link": {
      "type": [ "string", "null" ]
    },
    "shop_link": {
      "type": [ "string", "null" ]
    },
    "observation_enabled": {
      "type": "boolean"
    },
    "correction_enabled": {
      "type": "boolean"
    },
    "view_type": {
      "type": "string",
      "enum": [
        "terrestrial",
        "lowOblique",
        "highOblique",
        "nadir"
      ]
    },
    "height": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "example": 3000
    },
    "width": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "example": 2000
    },
    "date_orig": {
      "type": ["string","null"]
    },
    "date_shot": {
      "oneOf": [
        {
          "type": "string",
          "format": "date",
          "description": "If known, date when the picture was shot/painted."
        },
        {
          "type": "null"
        }
      ]
    },
    "date_shot_min": {
      "oneOf": [
        {
          "type": "string",
          "format": "date",
          "description": "If known, date range when the picture was shot/painted."
        },
        {
          "type": "null"
        }
      ]
    },
    "date_shot_max": {
      "oneOf": [
        {
          "type": "string",
          "format": "date",
          "description": "If known, date range when the picture was shot/painted."
        },
        {
          "type": "null"
        }
      ]
    },
    "apriori_location": {
      "type": "object",
      "properties": {
        "longitude": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "altitude": {
          "type": [ "number", "null" ]
        },
        "azimuth": {
          "type": [ "number", "null" ]
        },
        "exact": {
          "type": "boolean",
          "example": "false",
          "description": "false by default. If true, the camera position will be locked to that exact position during georeferencing."
        }
      },
      "additionalProperties": false,
      "required": [
        "longitude",
        "latitude"
      ]
    },
    "photographer_ids": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "iiif_data",
    "is_published", 
    "original_id", 
    "title", 
    "collection_id", 
    "view_type",
    "license", 
    "observation_enabled", 
    "correction_enabled", 
    "height", 
    "width",
    "apriori_location"
  ]
}
