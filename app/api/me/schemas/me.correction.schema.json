{
  "$id": "UserCorrectionInfo",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "ApiId#"
    },
    "state": {
      "enum": ["created", "accepted", "rejected", "updated"]
    },
    "date_created": {
      "type": "string",
      "format": "date-time"
    },
    "remark": {
      "type": "string"
    },
    "correction": {
      "type": "string"
    },
    "type": {
      "enum": ["title", "caption"]
    },
    "update" : {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "correction": {
              "type": "string"
            }
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "image": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "ApiId#"
        },
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "caption": {
          "type": ["string", "null"]
        },
        "orig_title": {
          "type": "string"
        },
        "orig_caption": {
          "type": ["string", "null"]
        },
        "media": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "image_url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "owner": {
          "type": "object",
            "properties": {
              "id": {
                "$ref": "ApiId#"
              },
              "name": {
                "type": "string"
              }
            }
        },
        "collection": {
          "type": "object",
            "properties": {
              "id": {
                "$ref": "ApiId#"
              },
              "name": {
                "type": "string"
              }
            }
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "title"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "date_created",
    "state",
    "correction",
    "type",
    "image"
  ]
}
